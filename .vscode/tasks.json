{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/big/*.cpp",
                "${file}",
                "-o",
                "${workspaceFolder}/build/big",
                "-I${workspaceFolder}/include",
                "-std=c++20"
                
            ],
            "options": {
                "cwd": "${fileDirname}",
                
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Print Task Arguments",
            "detail": "Task generated by bignut.",
            "type": "shell",
            
            "command": "echo",
            "args": [
                "The file dirname  is ${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
              },
              "presentation": {
                "reveal": "always"
              }
        }
    ],
    "version": "2.0.0"
}